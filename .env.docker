# Docker Environment Configuration for PairPortfolio ETF Backtesting Application
# This file is used when running the application in Docker containers

# ================================================
# DATABASE CONFIGURATION (Docker PostgreSQL)
# ================================================
DATABASE_URL="postgresql://postgres:postgres123@postgres:5432/pairportfolio"
DIRECT_URL="postgresql://postgres:postgres123@postgres:5432/pairportfolio"

# ================================================
# REDIS CONFIGURATION (Docker Redis)
# ================================================
REDIS_URL="redis://redis:6379"

# ================================================
# NEXTAUTH.JS AUTHENTICATION
# ================================================
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="docker-nextauth-secret-change-in-production-123456789"

# ================================================
# JWT & SECURITY
# ================================================
JWT_SECRET_KEY="docker-jwt-secret-change-in-production-123456789"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# ================================================
# API KEYS - FINANCIAL DATA PROVIDERS
# ================================================
FMP_API_KEY="Ejh2emZcJzogsHafpis8ogaXO7nPZDPI"
ALPHA_VANTAGE_API_KEY=""
YAHOO_FINANCE_ENABLED="true"

# ================================================
# ENVIRONMENT SETTINGS
# ================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_ENV="development"
PORT="3001"

# ================================================
# FEATURE FLAGS
# ================================================
ENABLE_QUERY_DEVTOOLS="true"
ENABLE_DEBUG_MODE="true"
DISABLE_TELEMETRY="true"

# ================================================
# PERFORMANCE & CACHING
# ================================================
CACHE_STRATEGY="redis"
CACHE_DEFAULT_TTL="3600"
MARKET_DATA_CACHE_TTL="3600"
PRICE_DATA_CACHE_TTL="300"

# ================================================
# LOGGING
# ================================================
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING="true"
LOG_FORMAT="json"

# ================================================
# BACKTEST ENGINE
# ================================================
DEFAULT_INITIAL_CAPITAL="100000"
ENABLE_BACKTEST_CACHING="true"
BACKTEST_CACHE_TTL="3600"

# ================================================
# UI/UX CONFIGURATION
# ================================================
NEXT_PUBLIC_APP_NAME="ETF Portfolio Backtesting"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_COMPANY_NAME="Portfolio Analytics"

# ================================================
# HEALTH CHECK
# ================================================
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_ENDPOINT="/api/health"